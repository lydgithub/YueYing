<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="top"
        android:background="@drawable/bg_1"
        android:columnCount="1" >

        <Button
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:alpha="1"
            android:background="@drawable/bg_1"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:text="约影活动详情"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="1dp"
        android:columnCount="1" >

        <ImageView
            android:id="@+id/other"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/bdl" />

        <TextView
            android:id="@+id/tvIsConnected"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:text="布达拉佩斯的雪橇"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="55dp"
            android:layout_row="0"
            android:text="21岁"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_column="0"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="55dp"
            android:layout_row="0"
            android:scaleType="fitXY"
            android:src="@drawable/girl" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="55dp"
            android:layout_row="0"
            android:text="爱情 悬疑"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_column="0"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="130dp"
            android:layout_row="0"
            android:text="200米"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="130dp"
            android:layout_row="0"
            android:text="地点：五道口影院  海淀区成府路"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:layout_row="0"
            android:text="AA    邀请一名男生"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="105dp"
            android:layout_row="0"
            android:text="时间：6月22日 18:25"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="55dp"
            android:layout_row="0"
            android:src="@drawable/liaoliaokan" />

        <ImageView
            android:id="@+id/iv_Baoming"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="155dp"
            android:layout_row="0"
            android:background="@drawable/baoming" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="130dp"
            android:layout_row="0"
            android:src="@drawable/locationgps" />
    </GridLayout>

    <GridLayout
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="270dp" >

        <TableLayout
            android:id="@+id/tbLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/tv_bg_color" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="影片信息"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:rowCount="6" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_row="0"
                    android:layout_rowSpan="1"
                    android:src="@drawable/shoucang" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="0"
                    android:layout_rowSpan="1"
                    android:gravity="left|center_vertical"
                    android:text="《哥斯拉》"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="2"
                    android:layout_rowSpan="1"
                    android:gravity="left|center_vertical"
                    android:text="类型：传记，爱情"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="4"
                    android:layout_rowSpan="1"
                    android:gravity="left|center_vertical"
                    android:text="时长：103分钟"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="3"
                    android:layout_rowSpan="1"
                    android:text="地区：美国"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:layout_rowSpan="6"
                    android:scaleType="fitXY"
                    android:src="@drawable/image1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="1"
                    android:layout_rowSpan="1"
                    android:text="7.1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="1"
                    android:layout_rowSpan="1"
                    android:text="分"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="5"
                    android:text="上映时间：2014年6月13日"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp" />

            </GridLayout>
        </TableLayout>

        
    </GridLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:paddingTop="10dp" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="TA对你的期望"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="诚邀大叔"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

<TableRow
    android:id="@+id/tableRow1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
</TableRow>

<TableRow
    android:id="@+id/tableRow2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
</TableRow>

</TableLayout>