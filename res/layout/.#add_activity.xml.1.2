<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="top"
        android:background="@drawable/bg_1"
        android:columnCount="1" >

        <Button
            android:id="@+id/btn_location"
            android:layout_width="60dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:alpha="1"
            android:background="@drawable/bg_1"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:text="发起约影"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </GridLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:columnCount="2" >

                <TextView
                    android:id="@+id/tvIsConnected"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_row="0"
                    android:text="和TA约影"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_column="1"
                    android:layout_marginRight="83dp"
                    android:layout_marginTop="30dp"
                    android:layout_row="0"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:paddingLeft="-8px"
                        android:text="女"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="-8px"
                        android:text="男"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="-8px"
                        android:text="不限"
                        android:textColor="#FFFFFF" />

                </RadioGroup>
            </GridLayout>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:columnCount="2" >

                <TextView
                    android:id="@+id/gps_latitude"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:text="约影方式"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_column="1"
                    android:layout_marginRight="95dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="我请客"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AA"
                        android:textColor="#FFFFFF" />
                </RadioGroup>
            </GridLayout>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:columnCount="3"
                android:rowCount="2" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:text="选择影片:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </GridLayout>

            <cn.ucas.yueying.view.GalleryFlow
                android:id="@+id/Gallery"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp" >

            </cn.ucas.yueying.view.GalleryFlow>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="1"
                android:rowCount="2" >
            </GridLayout>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="1"
                android:rowCount="2" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_row="0"
                    android:layout_rowSpan="1"
                    android:text="说说对TA的其他期望:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill_horizontal|top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_row="1"
                    android:layout_rowSpan="1"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="说点什么吧"
                    android:textColor="@color/tv_color" >

                    <requestFocus />
                </EditText>
            </GridLayout>

            <Button
                android:id="@+id/bt_faqi"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:text="发起"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_menu"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/nearby_activities"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_nearby_btn_bg"
            android:button="@null"
            android:checked="true"
            android:tag="home" />

        <RadioButton
            android:id="@+id/find_view"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_add_btn_bg"
            android:button="@null"
            android:tag="cart" />

        <RadioButton
            android:id="@+id/manage"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_massage_btn_bg"
            android:button="@null"
            android:tag="personal" />

        <RadioButton
            android:id="@+id/home"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:tag="more" />
    </RadioGroup>

</TableLayout>