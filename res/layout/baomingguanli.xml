<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="1dp"
        android:columnCount="2"
        android:rowCount="4" >

        <ImageView
            android:id="@+id/iV_distance"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:scaleType="fitXY"
            android:src="@drawable/bdl" />

        <TextView
            android:id="@+id/tvIsConnected"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:text="布达拉佩斯的雪橇"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:text="21岁"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:background="@drawable/girl"
            android:scaleType="fitXY"
            android:src="@drawable/girl" />

        <TextView
            android:id="@+id/textView16"
            android:layout_column="1"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:text="2100m"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:layout_row="2"
            android:background="@drawable/liao"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/bt_yt"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_row="2"
            android:background="@drawable/yueta" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_row="3"
            android:layout_rowSpan="1"
            android:src="@drawable/fengexian" />

    </GridLayout>
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="1dp"
        android:columnCount="2"
        android:rowCount="4" >

        <ImageView
            android:id="@+id/iV_distance"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="left|top|bottom"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:scaleType="fitXY"
            android:src="@drawable/gril2" />

        <TextView
            android:id="@+id/tvIsConnected"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:text="晴天"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:text="22岁"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:background="@drawable/girl"
            android:scaleType="fitXY"
            android:src="@drawable/girl" />

        <TextView
            android:id="@+id/textView16"
            android:layout_column="1"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:text="2100m"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:layout_row="2"
            android:background="@drawable/liao"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/bt_yt"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_row="2"
            android:background="@drawable/yueta" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_row="3"
            android:layout_rowSpan="1"
            android:src="@drawable/fengexian" />

    </GridLayout>
        </LinearLayout>
    </ScrollView>

    

</TableLayout>
