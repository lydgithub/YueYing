<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/bg_1"
        android:columnCount="1" >

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:text="附近的活动"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imageButtonback"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:background="@drawable/bg_1"
            android:scaleType="center"
            android:src="@drawable/jiantou_1" />
    </GridLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_weight="1" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_2" >

            <GridLayout
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:columnCount="2" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:src="@drawable/u20_normal" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:text="神偷奶爸" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:text="电影达人小曼" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_column="1"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_row="1"
                    android:text="23岁" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:layout_column="1"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:src="@drawable/bg_1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:text="动作喜剧" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_column="1"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:text="我有票" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:text="邀请一位女生" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="2"
                    android:text="时间：后天19:00" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_row="3"
                    android:text="地点：五道口" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_height="10dp"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_row="4"
                    android:scaleType="fitXY"
                    android:src="@drawable/xuxian" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_row="5"
                    android:src="@drawable/bg_1" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"
                    android:layout_row="5"
                    android:text="62" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_row="5"
                    android:text="已有23人报名" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="5dp"
                    android:layout_row="5"
                    android:src="@drawable/jiantou_2" />
            </GridLayout>

            <GridLayout
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:columnCount="2" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:src="@drawable/u55_normal" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:text="风声" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:text="布达拉佩斯的雪橇" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_column="1"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_row="1"
                    android:text="21岁" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:layout_column="1"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:src="@drawable/bg_1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:text="悬疑爱情" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_column="1"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:text="我没票" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:text="邀请一位男生" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="2"
                    android:text="时间：后天19:00" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_row="3"
                    android:text="地点：五道口" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_height="10dp"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_row="4"
                    android:scaleType="fitXY"
                    android:src="@drawable/xuxian" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_row="5"
                    android:src="@drawable/bg_1" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"
                    android:layout_row="5"
                    android:text="62" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_row="5"
                    android:text="已有23人报名" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="5dp"
                    android:layout_row="5"
                    android:src="@drawable/jiantou_2" />
            </GridLayout>
        </TableLayout>
    </ScrollView>

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/menu_tab_home"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:checked="true"
            android:tag="home" />

        <RadioButton
            android:id="@+id/menu_tab_cart"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:tag="cart" />

        <RadioButton
            android:id="@+id/menu_tab_personal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:tag="personal" />

        <RadioButton
            android:id="@+id/menu_tab_more"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:tag="more" />
    </RadioGroup>

</TableLayout>