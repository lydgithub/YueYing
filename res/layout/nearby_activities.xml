<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="top"
        android:background="@drawable/bg_1"
        android:columnCount="1" >

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:text="附近的活动"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imageButtonback"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:background="@drawable/bg_1"
            android:scaleType="center"
            android:src="@drawable/jiantou_1" />
    </GridLayout>

            <cn.ucas.yueying.view.ListViewExt
                android:id="@+id/huodonglistView"
                android:layout_width="match_parent"
                android:layout_weight="1" >

            </cn.ucas.yueying.view.ListViewExt>

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/nearby_activities"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:checked="true"
            android:tag="home" />

        <RadioButton
            android:id="@+id/find_view"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:tag="cart" />

        <RadioButton
            android:id="@+id/manage"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:tag="personal" />

        <RadioButton
            android:id="@+id/home"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/menu_home_btn_bg"
            android:button="@null"
            android:tag="more" />
    </RadioGroup>

</TableLayout>